[*.cs]
indent_style = tab
indent_size = 4

# IDISP002: Disposable field/property should be disposed
# Ensures that fields/properties implementing IDisposable are properly disposed
dotnet_diagnostic.IDISP002.severity = error

# CA1851: Possible multiple enumeration of IEnumerable collection
# Warns when an IEnumerable might be enumerated multiple times
dotnet_diagnostic.CA1851.severity = none

# ReSharper - Possible multiple enumeration of IEnumerable
# Same as CA1851 but for ReSharper/Rider
resharper_possible_multiple_enumeration_highlighting = none

#-------------------------------------------------------------------------------

# Xml solution files
[*.slnxs]

# Xml project files
[*.{csproj,vbproj,vcxproj,vcxproj.filters,proj,nativeproj,locproj}]
indent_style = tab
indent_size = 2

[*.{csproj,vbproj,proj,nativeproj,locproj}]
charset = utf-8

# Xml files
[*.{xml,stylecop,resx,ruleset}]
indent_style = tab
indent_size = 2

# Xml config files
[*.{props,targets,config,nuspec}]
indent_style = tab
indent_size = 2

# Json files
[*.{json,jsonc}]
indent_style = tab
indent_size = 2

# YAML config files
[*.{yml,yaml}]
indent_style = tab
indent_size = 2

# Shell scripts
[*.sh]
indent_style = tab
indent_size = 4
end_of_line = lf

# Markdown files
[*.md]
indent_style = tab
indent_size = 2
trim_trailing_whitespace = false
